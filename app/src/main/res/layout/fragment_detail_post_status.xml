<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.ngapainya.ngapainya.fragment.volunteer.child.DetailPostFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_timeline_post_status" />

        <ImageView
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:id="@+id/postTypeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_timeline_places" />


        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/propic_default"/>
            <ImageView
                android:src="@drawable/rounded_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <TextView
                android:id="@+id/time"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/ColorBase"
        android:orientation="vertical"
        android:padding="10dp">

        <ListView
            android:visibility="gone"
            android:id="@+id/list_home"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:paddingBottom="70dp"
            android:paddingTop="10dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/content_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_edittext"
                android:hint="Write a comment..." />

            <Button
                android:textAllCaps="false"
                android:text="Post"
                android:textColor="@color/white"
                android:background="@drawable/my_button_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_comment_btn" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
