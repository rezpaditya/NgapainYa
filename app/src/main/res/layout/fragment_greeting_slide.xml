<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    tools:context="com.ngapainya.ngapainya.fragment.volunteer.child.GreetingSlideFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:onClick="goTo"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgGreeting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_greeting" />

        <TextView
            android:padding="10dp"
            android:textSize="8pt"
            android:textColor="@color/ColorPrimary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here!"
            android:id="@+id/textView13" />

        <TextView
            android:textSize="6pt"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy "
            android:id="@+id/textView14" />
    </LinearLayout>

</LinearLayout>
