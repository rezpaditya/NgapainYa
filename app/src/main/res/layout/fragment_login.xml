<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card_base"
    android:orientation="vertical"
    tools:context="com.ngapainya.ngapainya.fragment.volunteer.child.LoginFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:focusable="true"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_action_mail"
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_card"
                android:hint="Email" />

            <EditText
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_action_secure"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_card"
                android:hint="Password" />

            <Button
                android:textAllCaps="false"
                android:id="@+id/login_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:background="@drawable/my_button_red"
                android:text="Login"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
