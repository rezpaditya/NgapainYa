        <android.widget.EditText
            android:drawableLeft="@drawable/ic_calendar_icon"
            android:onClick="onClick"
            android:hint="Project Start"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/background_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/pjtStart"
            android:focusable="false" />

        <android.widget.EditText
            android:drawableLeft="@drawable/ic_calendar_icon"
            android:onClick="onClick"
            android:hint="Project End"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/background_card"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/pjtEnd"
            android:focusable="false" />

        <EditText
            android:inputType="numberDecimal"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/background_card"
            android:hint="Age Min"
            android:id="@+id/ageMin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/background_card"
            android:hint="Age Max"
            android:id="@+id/ageMax"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/background_card"
            android:hint="Quota"
            android:id="@+id/quota"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/background_card"
            android:hint="Requirement"
            android:id="@+id/requirement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="100dp" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/background_card"
            android:hint="Accomodation"
            android:id="@+id/accomodation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="100dp"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:background="@drawable/background_card"
            android:hint="Description"
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="100dp"/>
    </LinearLayout>
</ScrollView>
