<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ngapainya.ngapainya.fragment.MyProfileFragment">

    <LinearLayout
        android:id="@+id/topBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ActionbarColor"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POSTS"
                android:textColor="#FFF"
                android:textSize="@dimen/profile_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#ffe2e2e2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJECTS"
                android:textColor="#FFF"
                android:textSize="@dimen/profile_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#ffe2e2e2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRIENDS"
                android:textColor="#FFF"
                android:textSize="@dimen/profile_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.4M"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBg"
        android:background="#FFF"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/editProfileBtn"
                android:onClick="onClick"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:background="@drawable/my_button_red"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/profile_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_place"
                android:padding="10dp"
                android:text="Jakarta, Indonesia" />
        </LinearLayout>
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:onClick="onClick"
        android:id="@+id/profile_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/propic_02"
        app:border_color="#fff"
        app:border_width="2dp" />


    <android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/botBg">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/tabbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:onClick="onClick"
                    android:id="@+id/showFeed"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtShwFeed"
                        android:textColor="@color/Red"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feed" />

                    <TextView
                        android:textSize="5pt"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/background_date_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent"
                    android:background="#ffe2e2e2" />

                <LinearLayout
                    android:onClick="onClick"
                    android:id="@+id/showFriend"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtShwFriend"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friends" />

                    <TextView
                        android:textSize="5pt"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/background_date_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:background="#fff"
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/tabbar" />

        </RelativeLayout>
    </android.support.v4.app.FragmentTabHost>

</RelativeLayout>
