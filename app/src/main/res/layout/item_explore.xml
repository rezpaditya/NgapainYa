<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff"
    android:padding="10dp">

    <ImageView
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/logo_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3" />

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event's Title"
            android:id="@+id/exp_title" />

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit ..."
            android:id="@+id/textView3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="4pt"
                android:textColor="#fff"
                android:padding="5dp"
                android:background="@drawable/background_date_green"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Aug"
                android:id="@+id/textView4" />

            <TextView
                android:textSize="4pt"
                android:textColor="#fff"
                android:padding="5dp"
                android:background="@drawable/background_date_red"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Aug"
                android:id="@+id/textView5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>